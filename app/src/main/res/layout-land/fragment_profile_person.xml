<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/creamy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_profile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/max_input_width_profile_landscape">

            <ImageView
                android:id="@+id/iv_person_profile_photo"
                android:layout_width="@dimen/landscape_center"
                android:layout_height="@dimen/landscape_center"
                android:background="@color/border_color"
                android:src="@android:drawable/ic_menu_camera"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_first_name"
                style="@style/PetInputLayout"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_label"
                android:layout_marginEnd="@dimen/field_margin_bottom"
                app:layout_constraintTop_toBottomOf="@id/iv_person_profile_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/til_last_name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_person_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_last_name"
                style="@style/PetInputLayout"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/til_first_name"
                app:layout_constraintStart_toEndOf="@id/til_first_name"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_person_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_birth_date"
                style="@style/PetInputLayout"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_margin_bottom"
                android:layout_marginEnd="@dimen/field_margin_bottom"
                app:layout_constraintTop_toBottomOf="@id/til_first_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/til_country">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_person_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/birth_date"
                    android:inputType="date" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_country"
                style="@style/PetInputLayout"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/til_birth_date"
                app:layout_constraintStart_toEndOf="@id/til_birth_date"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_person_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/country" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_city"
                style="@style/PetInputLayout"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_margin_bottom"
                android:layout_marginEnd="@dimen/field_margin_bottom"
                app:layout_constraintEnd_toStartOf="@+id/til_street"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_birth_date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_person_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/city" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_street"
                style="@style/PetInputLayout"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/til_city"
                app:layout_constraintStart_toEndOf="@id/til_city"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_person_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/street_address" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_phone"
                style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_margin_bottom"
                app:layout_constraintTop_toBottomOf="@id/til_city"
                app:layout_constraintStart_toStartOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_person_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_change_password_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_label"
                android:text="@string/change_password"
                android:textColor="@color/pet_gold"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/til_phone"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/layout_password_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="@dimen/field_margin_bottom"
                app:layout_constraintTop_toBottomOf="@id/tv_change_password_link">
                <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_margin_bottom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/old_password"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_margin_bottom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/new_password"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_stroke_width"
                android:layout_marginTop="@dimen/margin_label"
                android:background="@color/border_color"
                app:layout_constraintTop_toBottomOf="@id/layout_password_change" />

            <TextView
                android:id="@+id/tv_my_pets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_label"
                android:text="@string/my_pets"
                android:textSize="@dimen/text_size_subtitle"
                app:layout_constraintTop_toBottomOf="@id/separator"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/pets_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_my_pets_title" />

            <Button
                android:id="@+id/btn_add_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_margin_bottom"
                android:text="@string/add_pet"
                android:backgroundTint="@color/brown"
                app:layout_constraintTop_toBottomOf="@id/pets_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn_save_person_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginBottom="@dimen/margin_label"
                android:text="@string/save_profile"
                android:backgroundTint="@color/pet_gold"
                app:layout_constraintTop_toBottomOf="@id/btn_add_pet"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>