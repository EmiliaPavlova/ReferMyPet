<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="24dp">

    <TextView
        android:id="@+id/tv_reg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_label_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_as"
        android:textColor="@color/dark_brown"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_reg_title"
        app:layout_constraintStart_toStartOf="@id/et_reg_email_layout" />

    <Spinner
        android:id="@+id/spinner_user_type"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/spinner_background"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_reg"
        app:layout_constraintStart_toStartOf="@id/et_reg_email_layout"
        app:layout_constraintEnd_toEndOf="@id/et_reg_password_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_reg_email_layout"
        style="@style/PetInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_user_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical">
      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/et_reg_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/email_req"
          android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_reg_password_layout"
        style="@style/PetInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/et_reg_email_layout"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:passwordToggleEnabled="true">
      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/et_reg_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/password_req"
          android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_reg_confirm_layout"
        style="@style/PetInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_reg_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
        app:passwordToggleEnabled="true">
      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/et_reg_confirm"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/confirm_password"
          android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <FrameLayout
        android:id="@+id/dynamic_form_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_reg_confirm_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
      <include android:id="@+id/include_person" layout="@layout/layout_registration_person" />
      <include android:id="@+id/include_hotel" layout="@layout/layout_registration_hotel" android:visibility="gone" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_reg_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:backgroundTint="@color/pet_gold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/dynamic_form_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="400dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>