<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_profile">
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_name"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/brown"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_label" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upcoming_reservation"
            android:textSize="@dimen/text_size_subtitle"
            android:textColor="@color/brown"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_label" />

        <TextView
            android:id="@+id/tv_no_reservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_upcoming_reservations"
            android:textSize="@dimen/text_size_default"
            android:textColor="@color/dark_gray"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/field_margin_bottom" />

        <FrameLayout
            android:id="@+id/layout_upcoming_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <include
                android:id="@+id/included_booking_card"
                layout="@layout/item_booking" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_add_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_reservation"
            android:textColor="@color/pet_gold"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:padding="@dimen/padding_link"
            android:layout_marginBottom="@dimen/margin_label" />

        <TextView
            android:id="@+id/tv_view_all_bookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all_reservations"
            android:textColor="@color/pet_gold"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:padding="@dimen/padding_link"
            android:layout_marginBottom="@dimen/field_margin_bottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_stroke_width"
            android:background="#E0E0E0"
            android:layout_marginVertical="@dimen/margin_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latest_referral"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_subtitle"
            android:textColor="@color/brown"
            android:layout_marginBottom="@dimen/field_margin_bottom" />

        <TextView
            android:id="@+id/tv_no_referrals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_referrals_yet"
            android:textSize="@dimen/text_size_default"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="@dimen/field_margin_bottom"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_latest_referral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_referral_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom"
                android:textSize="@dimen/text_size_default"
                android:textColor="@android:color/black"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_view_all_referrals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_all_referrals"
                android:textColor="@color/pet_gold"
                android:textSize="@dimen/text_size_default"
                android:textStyle="bold"
                android:padding="@dimen/padding_link"
                android:layout_marginBottom="@dimen/margin_label" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_stroke_width"
                android:background="#E0E0E0"
                android:layout_marginBottom="@dimen/margin_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_rating"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_subtitle"
                android:textColor="@color/brown"
                android:layout_marginBottom="@dimen/field_margin_bottom" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="@color/pet_gold"
                android:progressBackgroundTint="@color/light_gray" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>