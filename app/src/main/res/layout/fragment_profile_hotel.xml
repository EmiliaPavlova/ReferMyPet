<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/max_input_width_profile"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_h_photo"
                android:layout_width="@dimen/width_profile"
                android:layout_height="@dimen/width_profile"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_top"
                android:background="@color/border_color"
                android:src="@android:drawable/ic_menu_camera" />

            <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hotel_name"
                    android:textColor="@color/brown"
                    android:paddingVertical="@dimen/input_vertical_padding" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_search_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_hotel"
                android:layout_gravity="end"
                android:backgroundTint="@color/pet_gold"
                android:textColor="@android:color/white"/>

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_chain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/chain_name"
                    android:textColor="@color/brown"
                    android:paddingVertical="@dimen/input_vertical_padding" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/country"
                    android:textColor="@color/brown"
                    android:paddingVertical="@dimen/input_vertical_padding" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/city"
                    android:textColor="@color/brown"
                    android:paddingVertical="@dimen/input_vertical_padding" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_postal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/postal_code"
                    android:paddingVertical="@dimen/input_vertical_padding"
                    android:textColor="@color/brown" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/street_address"
                    android:textColor="@color/brown" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_phone_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/primary_phone"
                    android:inputType="phone"
                    android:textColor="@color/brown"
                    android:paddingVertical="@dimen/input_vertical_padding" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/field_margin_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_phone_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/secondary_phone"
                    android:inputType="phone"
                    android:textColor="@color/brown"
                    android:paddingVertical="@dimen/input_vertical_padding" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_h_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:textColor="@color/brown"
                    android:paddingVertical="@dimen/input_vertical_padding" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_h_change_password_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/change_password"
                android:textColor="@color/pet_gold"
                android:textSize="@dimen/text_size_default"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:id="@+id/layout_h_password_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="@dimen/field_margin_bottom">

                <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_margin_bottom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_h_old_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/old_password"
                        android:inputType="textPassword"
                        android:textColor="@color/brown" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_h_new_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/new_password"
                        android:inputType="textPassword"
                        android:textColor="@color/brown" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/PetInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_h_confirm_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:textColor="@color/brown" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_h_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="@string/save_profile"
                android:backgroundTint="@color/pet_gold"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>