<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/field_margin_bottom"
    android:layout_marginHorizontal="@dimen/section_margin_bottom"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_profile"
        android:background="@color/creamy"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_pet_icon"
            android:layout_width="@dimen/image_size_large"
            android:layout_height="@dimen/image_size_large"
            android:layout_marginEnd="@dimen/section_margin_bottom"
            android:src="@drawable/ic_default_pet_placeholder"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pet_name_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buddy (Dog)"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/tv_pet_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed: Golden Retriever"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/tv_pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: 3 years"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/brown"
                android:layout_marginTop="@dimen/card_marginTop" />

            <TextView
                android:id="@+id/tv_pet_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip: ABC123DEF"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/brown"
                android:layout_marginTop="@dimen/card_marginTop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_label_small">

                <ImageView
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:src="@android:drawable/btn_star_big_on"
                    app:tint="@color/pet_gold" />

                <TextView
                    android:id="@+id/tv_pet_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="@dimen/text_size_default"
                    android:textStyle="bold"
                    android:textColor="@color/pet_gold"
                    android:layout_marginStart="@dimen/margin_label_small" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>